<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Nnp_Hello>
            <version>0.0.2</version>
        </Nnp_Hello>
    </modules>
    <global>
        <blocks>
            <hello>
                <class>Nnp_Hello_Block</class>
            </hello>
        </blocks>
        <helpers>
            <hello>
                <class>Nnp_Hello_Helper</class>
            </hello>
        </helpers>
        <models>
            <hello>
                <class>Nnp_Hello_Model</class>
                <resourceModel>hello_resource</resourceModel>
            </hello>
            <hello_resource>
                <class>Nnp_Hello_Model_Resource</class>
                <entities>
                    <subscription>
                        <table>hello_subscription</table>
                    </subscription>
                    <hello_entity>
                        <table>hello_hello_entity</table>
                    </hello_entity>
                    <hello_entity_datetime>
                        <table>hello_hello_entity_datetime</table>
                    </hello_entity_datetime>
                    <hello_entity_decimal>
                        <table>hello_hello_entity_decimal</table>
                    </hello_entity_decimal>
                    <hello_entity_int>
                        <table>hello_hello_entity_int</table>
                    </hello_entity_int>
                    <hello_entity_text>
                        <table>hello_hello_entity_text</table>
                    </hello_entity_text>
                    <hello_entity_varchar>
                        <table>hello_hello_entity_varchar</table>
                    </hello_entity_varchar>
                    <hello_entity_char>
                        <table>hello_hello_entity_char</table>
                    </hello_entity_char>
                </entities>
            </hello_resource>
        </models>
        <resources>
            <hello_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </hello_write>
            <hello_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </hello_read>
            <hello_install>
                <setup>
                    <module>Nnp_Hello</module>
                    <class>Nnp_Hello_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </hello_install>
        </resources>
    </global>
    <frontend>
        <events>
            <controller_action_layout_generate_xml_after>
                <observers>
                    <hello_generate_xml>
                        <class>Nnp_Hello_Model_Observer</class>
                        <method>showXml</method>
                    </hello_generate_xml>
                </observers>
            </controller_action_layout_generate_xml_after>

            <controller_action_layout_generate_blocks_after>
                <observers>
                    <hello_layout_generate>
                        <class>Nnp_Hello_Model_Observer</class>
                        <method>showLog</method>
                    </hello_layout_generate>
                </observers>
            </controller_action_layout_generate_blocks_after>

            <controller_action_layout_render_before>
                <observers>
                    <hello_layout_render>
                        <class>Nnp_hello_Model_Observer</class>
                        <method>showRenderer</method>
                    </hello_layout_render>
                </observers>
            </controller_action_layout_render_before>
        </events>
        <routers>
            <hello>
                <use>standard</use>
                <args>
                    <module>Nnp_Hello</module>
                    <frontName>hello</frontName>
                </args>
            </hello>
        </routers>
        <layout>
            <updates>
                <hello>
                    <file>nnp_hello.xml</file>
                </hello>
            </updates>
        </layout>
    </frontend>
</config>